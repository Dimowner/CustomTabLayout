<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		tools:context="com.xybean.customtablayout.MainActivity">

	<com.xybean.customtablayout.tablayout.CustomTabLayout
			android:id="@+id/tab_layout"
			android:layout_width="match_parent"
			android:layout_height="56dp"
			android:background="@color/md_blue_700"
			android:textSize="30sp"
			android:elevation="2dp"
			app:tabIndicatorWidth="48dp"
			app:tabIndicatorHeight="4dp"
			app:tabPaddingBottom="16dp"
			app:tabIndicatorPaddingBottom="10dp"
			app:tabSelectedTextColor="@color/white"
			app:tabTextColor="@color/white"/>

	<android.support.v4.view.ViewPager
			android:id="@+id/view_pager"
			android:layout_width="match_parent"
			android:layout_height="match_parent"/>

</LinearLayout>
